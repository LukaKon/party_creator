{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parser": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "indent": ["error", 2],
      "semi": ["warn", "always"],
      "quotes": ["warn", "double"],
      "arrow-body-style": ["warn", "as-needed"],
      "block-scoped-var": ["warn"],
      "dot-notation": ["warn"],
      "no-console": ["warn"],
    }
}
