{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "lib": ["es2021"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "target": "es2021",

    "strict": true,
    "isolatedModules": true, 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*"]
}
